<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chapter4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/toNum1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number 1"
                android:onClick="startReadingTestPageWithQuestionNumber" />

            <Button
                android:id="@+id/toNum2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number 2" />

            <Button
                android:id="@+id/toNum3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number 3" />

            <Button
                android:id="@+id/toNum4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number 4" />

            <Button
                android:id="@+id/toNum5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number 5" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

